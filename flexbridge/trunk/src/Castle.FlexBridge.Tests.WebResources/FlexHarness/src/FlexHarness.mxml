<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute"
	initialize="init()">
	<mx:Script>
	<![CDATA[
		import harness.MethodResult;
		import harness.RemoteObjectTestProxy;
		import flash.net.registerClassAlias;
		
		private var remoteObjectTestProxy:RemoteObjectTestProxy;
	
		private function init():void
		{
			registerClassAlias("FlexHarness.MethodResult", MethodResult);
			
			remoteObjectTestProxy = new RemoteObjectTestProxy();
			remoteObjectTestProxy.installExternalInterface();
		}
	]]>
	</mx:Script>
</mx:Application>
